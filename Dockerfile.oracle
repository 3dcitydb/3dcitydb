# 3DCityDB Oracle Dockerfile ##################################################
#   Official website    https://www.3dcitydb.org
#   GitHub              https://github.com/3dcitydb
###############################################################################

# Fetch & build stage #########################################################
# ARGS
ARG BASEIMAGE_TAG='latest'
ARG BUILDER_IMAGE_TAG='21-jdk-jammy'

# Base image
FROM eclipse-temurin:${BUILDER_IMAGE_TAG} AS builder

# Copy source code
WORKDIR /build
COPY . /build

# Build
RUN chmod u+x ./gradlew && ./gradlew installDist

# Make init script executable
RUN chmod +x /build/build/install/3dcitydb/oracle/docker-scripts/3dcitydb-initdb.sh

# Runtime stage ###############################################################
# Base image
FROM container-registry.oracle.com/database/free:${BASEIMAGE_TAG} AS runtime

# Set 3DCityDB version
ARG CITYDB_VERSION
ENV CITYDB_VERSION=${CITYDB_VERSION}

# Copy SQL scripts
WORKDIR /3dcitydb
COPY --from=builder /build/build/install/3dcitydb/version.txt .
COPY --from=builder /build/build/install/3dcitydb/oracle/sql-scripts .
COPY --from=builder /build/build/install/3dcitydb/oracle/docker-scripts/3dcitydb-initdb.sh /opt/oracle/scripts/startup/

# Set labels
LABEL maintainer="Karin Patenge"
LABEL maintainer.email="karin.patenge(at)oracle.com"
LABEL maintainer.organization="Oracle Global Services Deutschland GmbH"
LABEL source.repo="https://github.com/3dcitydb/3dcitydb"
