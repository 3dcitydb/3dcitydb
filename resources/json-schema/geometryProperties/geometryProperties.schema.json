{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/GeometryProperties",
  "definitions": {
    "GeometryProperties": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "metaData": {
          "$ref": "#/definitions/MetaData"
        },
        "hierarchy": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Hierarchy"
          }
        }
      },
      "required": [
        "metaData",
        "hierarchy"
      ],
      "title": "GeometryProperties"
    },
    "MetaData": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "is2D": {
          "type": "boolean"
        }
      },
      "required": [
        "is2D"
      ],
      "title": "MetaData"
    },
    "Hierarchy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["Polygon", "MultiSurface", "CompositeSurface", "TriangulatedSurface", "Solid", "MultiSolid", "CompositeSolid"]
        },
        "objectid": {
          "type": "string"
        },
        "parent": {
          "type": "integer"
        },
        "geometryIndex": {
          "type": "integer"
        },
        "referenceType": {
          "type": "integer",
          "enum": [0, 1, 2]
        },
        "isReversed": {
          "type": "boolean"
        }
      },
      "required": [
        "type"
      ],
      "title": "Hierarchy"
    }
  }
}
